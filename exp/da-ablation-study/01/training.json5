{
  "gpus": [0],
  "epochs": 1000,

  "module": {
    "mod_enc": {
      "config": "./modules/enc.json5",
      // "ckpt": "enc.ckpt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
    "mod_seg": {
      "config": "./modules/seg.json5",
      // "ckpt": "seg.ckpt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
    "mod_dis": {
      "config": "./modules/dis.json5",
      // "ckpt": "dis.ckpt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
  },

  "metric": {
    "met_seg": "./metrics/seg.json5",
    "met_ada": "./metrics/ada.json5",
  },

  "generator": {
    "gen_train_source": {
      "data": "./data/train_source.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 96,
          "n_samples": 16,
          "ratios": [
            0.0, // Background
            1.0, // Brainstem
            5.0, // Chiasm
            5.0, // Cochlea_L
            5.0, // Cochlea_R
            1.0, // Eye_L
            1.0, // Eye_R
            5.0, // Lacrimal_L
            5.0, // Lacrimal_R
            5.0, // OpticNerve_L
            5.0, // OpticNerve_R
            1.0, // Cerebellum
            1.0, // Falx
            1.0, // Sinuses
            1.0, // Tentorium
            1.0, // Ventricles
          ],
          "n_workers": 4,
        },
        "Augmentor": {
          "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_source": {
      "data": "./data/adapt_source.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 96,
          "n_samples": 12,
          "ratios": [
            0.2, // Background
            1.0, // Brainstem
            5.0, // Chiasm
            5.0, // Cochlea_L
            5.0, // Cochlea_R
            1.0, // Eye_L
            1.0, // Eye_R
            5.0, // Lacrimal_L
            5.0, // Lacrimal_R
            5.0, // OpticNerve_L
            5.0, // OpticNerve_R
            1.0, // Cerebellum
            1.0, // Falx
            1.0, // Sinuses
            1.0, // Tentorium
            1.0, // Ventricles
          ],
          "n_workers": 4,
        },
        "Augmentor": {
          "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_target": {
      "data": "./data/adapt_target.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 96,
          "n_samples": 12,
          "ratios": [
            0.2, // Background
            1.0, // Brainstem
            5.0, // Chiasm
            5.0, // Cochlea_L
            5.0, // Cochlea_R
            1.0, // Eye_L
            1.0, // Eye_R
            5.0, // Lacrimal_L
            5.0, // Lacrimal_R
            5.0, // OpticNerve_L
            5.0, // OpticNerve_R
            1.0, // Cerebellum
            1.0, // Falx
            1.0, // Sinuses
            1.0, // Tentorium
            1.0, // Ventricles
          ],
          "n_workers": 4,
        },
        "Augmentor": {
          "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_valid_source": {
      "data": "./data/valid_source.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 64,
          "n_workers": 1,
        },
      },
    },
    "gen_valid_target": {
      "data": "./data/valid_target.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 64,
          "n_workers": 1,
        },
      },
    },
  },

  "stage": {
    "train": {
      "generator": ["gen_train_source"],
      "toggle": {"mod_enc": true, "mod_seg": true, "mod_dis": false},
      "forward": ["mod_enc", "mod_seg", "mod_dis"],
      "metric": "met_seg",
      "revert": false,
      "period": 1,
    },
    "adapt": {
      "generator": ["gen_adapt_source", "gen_adapt_target"],
      "toggle": {"mod_enc": true, "mod_seg": false, "mod_dis": true},
      "forward": ["mod_enc", "mod_dis"],
      "metric": "met_ada",
      "revert": false,
      "period": 4,
    },
    "valid_source": {
      "generator": ["gen_valid_source"],
      "toggle": {"mod_enc": false, "mod_seg": false, "mod_dis": false},
      "forward": ["mod_enc", "mod_seg", "mod_dis"],
      "metric": "met_seg",
      "revert": true,
      "period": 4,
    },
    "valid_target": {
      "generator": ["gen_valid_target"],
      "toggle": {"mod_enc": false, "mod_seg": false, "mod_dis": false},
      "forward": ["mod_enc", "mod_seg", "mod_dis"],
      "metric": "met_seg",
      "revert": true,
      "period": 4,
    },
  },
}
