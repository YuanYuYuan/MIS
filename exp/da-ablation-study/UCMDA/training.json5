{
  "gpus": [0],
  "epochs": 1000,

  "module": {
    "mod_enc_src": {
      "config": "./modules/enc.json5",
      "ckpt": "enc_src.pt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
    "mod_enc_tgt": {
      "config": "./modules/enc.json5",
      "ckpt": "enc_tgt.pt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
    "mod_seg": {
      "config": "./modules/seg.json5",
      "ckpt": "seg.pt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
    "mod_dis": {
      "config": "./modules/dis.json5",
      // "ckpt": "dis.ckpt",
      "optim": {"name": "Adam", "lr": 0.001},
    },
  },

  "metric": {
    "met_seg": "./metrics/seg.json5",
    "met_dis": "./metrics/dis.json5",
    "met_ada": "./metrics/ada.json5",
  },

  "generator": {
    "gen_train_source": {
      "data": "./data/source_train.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "stride": 48,
          "n_workers": 4,
        },
        // "Augmentor": {
        //   "affine": "weak",
        //   "noise": 0.1,
        //   "n_workers": 2,
        // },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_source": {
      "data": "./data/source_train.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "stride": 48,
          "n_workers": 4,
        },
        // "Augmentor": {
        //   "affine": "weak",
        //   "noise": 0.1,
        //   "n_workers": 2,
        // },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_target": {
      "data": "./data/target.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "stride": 48,
          "n_workers": 4,
        },
        // "Augmentor": {
        //   "affine": "weak",
        //   "noise": 0.1,
        //   "n_workers": 2,
        // },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_valid_source": {
      "data": "./data/source_valid.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "stride": 48,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 1,
        },
      },
    },
    "gen_valid_target": {
      "data": "./data/target.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 96,
          "stride": 48,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 1,
        },
      },
    },
  },

  "stage": {
    // "train_src": {
    //   "generator": "gen_train_source",
    //   "toggle": {
    //     "mod_enc_src": true,
    //     "mod_enc_tgt": false,
    //     "mod_seg": true,
    //     "mod_dis": false,
    //   },
    //   "forward": ["mod_enc_src", "mod_seg", "mod_dis"],
    //   "metric": "met_seg",
    //   "period": 1,
    // },
    "train_dis": {
      "generator": {
        "src": "gen_adapt_source",
        "tgt": "gen_adapt_target"
      },
      "toggle": {
        "mod_enc_src": false,
        "mod_enc_tgt": false,
        "mod_seg": false,
        "mod_dis": true,
      },
      "forward": {
        "src": ["mod_enc_src", "mod_seg", "mod_dis"],
        "tgt": ["mod_enc_tgt", "mod_seg", "mod_dis"],
      },
      "metric": "met_dis",
      "period": 10,
    },
    "adapt_enc": {
      "generator": "gen_adapt_target",
      "toggle": {
        "mod_enc_src": false,
        "mod_enc_tgt": true,
        "mod_seg": false,
        "mod_dis": false,
      },
      "forward": ["mod_enc_tgt", "mod_seg", "mod_dis"],
      "metric": "met_ada",
      "period": 1,
    },
    "valid_src": {
      "generator": "gen_valid_source",
      "toggle": {
        "mod_enc_src": false,
        "mod_enc_tgt": false,
        "mod_seg": false,
        "mod_dis": false,
      },
      "forward": ["mod_enc_src", "mod_seg", "mod_dis"],
      "metric": "met_seg",
      "revert": true,
      "period": 1000,
    },
    "valid_tgt": {
      "generator": "gen_valid_target",
      "toggle": {
        "mod_enc_src": false,
        "mod_enc_tgt": false,
        "mod_seg": false,
        "mod_dis": false,
      },
      "forward": ["mod_enc_tgt", "mod_seg", "mod_dis"],
      "metric": "met_seg",
      "revert": true,
      "period": 4,
    },
  },

  "checkpoint": {
    "stage": "valid_tgt",
    "metric": "cls_mean",
    "mode": "ascending",
    "lr_decay": 10,
    "early_stop": 20,
  }
}
