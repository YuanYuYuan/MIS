{
  "gpus": [0, 1],

  "module": {
    "mod_enc": {
      "config": "./modules/enc.json5",
      // "ckpt": "enc.ckpt",
      "optim": {"name": "Adam", "lr": 1.0},
    },
    "mod_seg": {
      "config": "./modules/seg.json5",
      // "ckpt": "seg.ckpt",
      "optim": {"name": "Adam", "lr": 1.0},
    },
    "mod_dis": {
      "config": "./modules/dis.json5",
      // "ckpt": "dis.ckpt",
      "optim": {"name": "Adam", "lr": 1.0},
    },
  },

  "metric": {
    "met_seg": "./metrics/seg.json5",
    "met_ada": "./metrics/ada.json5",
  },

  "generator": {
    "gen_train_source": {
      "data": "./data/train_source.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 16,
          "n_samples": 4,
          "n_workers": 4,
        },
        "Augmentor": {
          // "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_source": {
      "data": "./data/adapt_source.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 16,
          "n_samples": 4,
          "n_workers": 4,
        },
        "Augmentor": {
          // "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_adapt_target": {
      "data": "./data/adapt_target.json5",
      "struct": {
        "BlockSampler": {
          "block_shape": 16,
          "n_samples": 4,
          "n_workers": 4,
        },
        "Augmentor": {
          // "affine": "weak",
          "noise": 0.1,
          "n_workers": 2,
        },
        "BatchGenerator": {
          "batch_size": 16,
          "n_workers": 2,
        },
      },
    },
    "gen_valid_source": {
      "data": "./data/valid_source.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 16,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 32,
          "n_workers": 1,
        },
      },
    },
    "gen_valid_target": {
      "data": "./data/valid_target.json5",
      "struct": {
        "BlockGenerator": {
          "block_shape": 16,
          "n_workers": 4,
          "ordered": true,
        },
        "BatchGenerator": {
          "batch_size": 32,
          "n_workers": 1,
        },
      },
    },
  },

  "stage": {
    // "train": {
    //   "generator": ["gen_train_source"],
    //   "toggle": {"mod_enc": true, "mod_seg": true, "mod_dis": false},
    //   "forward": ["mod_enc", "mod_seg", "mod_dis"],
    //   "metric": "met_seg",
    //   "revert": false,
    // },
    "adapt": {
      "generator": ["gen_adapt_source", "gen_adapt_target"],
      // "toggle": {"mod_enc": true, "mod_seg": false, "mod_dis": true},
      "toggle": {"mod_enc": true, "mod_seg": false, "mod_dis": false},
      "forward": ["mod_enc", "mod_dis"],
      "metric": "met_ada",
      "revert": false,
    },
    // "valid_source": {
    //   "generator": ["gen_valid_source"],
    //   "toggle": {"mod_enc": false, "mod_seg": false, "mod_dis": false},
    //   "forward": ["mod_enc", "mod_seg", "mod_dis"],
    //   "metric": "met_seg",
    //   "revert": true,
    // },
    // "valid_target": {
    //   "generator": ["gen_valid_target"],
    //   "toggle": {"mod_enc": false, "mod_seg": false, "mod_dis": false},
    //   "forward": ["mod_enc", "mod_seg", "mod_dis"],
    //   "metric": "met_seg",
    //   "revert": true,
    // },
  },
}
